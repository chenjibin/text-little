page {
  height: 100%;
  background-color: #f8f8f8;
}

.search-bar {
  height: 36px;
  border-bottom: 1rpx solid #bbb;
  background-color: #fff;
}

.search-bar .search-form {
  display: block;
  height: 36px;
}

.search-bar .search-form .search-form-content {
  display: flex;
  width: 100%;
  height: 36px;
}

.search-bar .search-form .fs-input-wrapper {
  flex: 1;
  height: 36px;
  line-height: 36px;
  padding: 4px 12px;
  box-sizing: border-box;
}

.search-bar .search-form .fs-input-wrapper label {
  display: flex;
  height: 28px;
  line-height: 28px;
  background-color: #eee;
  border-radius: 20px;
}

.search-bar .search-form .fs-input-wrapper label icon {
  vertical-align: top;
  margin-left: 8px;
  height: 100%;
  font-size: 22px;
}

.search-bar .search-form .fs-input-wrapper .fs-input {
  flex: 1;
  vertical-align: top;
  margin-left: 8px;
  height: 28px;
  line-height: 28px;
  font-size: 14px;
  font-weight: 300;
}

.search-bar .search-form .btn-group {
  flex: 0 0 60px;
  width: 60px;
  padding: 4px 12px 4px 0;
  box-sizing: border-box;
}

.search-bar .search-form .btn {
  width: 100%;
  padding: 0;
}

.search-bar .search-form .btn.search {
  background-color: #dc0707;
  border: 0 !important;
  color: #fff;
}

.guess-want {
  position: absolute;
  left: 0;
  top: 37px;
  bottom: 0;
  width: 100%;
  padding: 14px 12px;
  background-color: #fff;
  box-sizing: border-box;
}

.guess-want .search-box {
}

.guess-want .search-box .head-area {
}

.guess-want .search-box .head-area .title {
  float: left;
  font-size: 14px;
}

.guess-want .search-box .head-area .btn {
  float: right;
  margin-top: 2px;
  color: #dc0707;
}

.guess-want .search-box .content {
  margin: 10px 0 20px 0;
}
.guess-want .search-box navigator {
  display: inline-block;
}
.guess-want .search-box .content .keyword {
  display: inline-block;
  margin: 0 8px 8px 0;
  padding: 4px 6px;
  background-color: #eee;
  color: #666;
  border-radius: 6px;
}
