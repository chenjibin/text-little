/**index.wxss**/
.home-swiper {
  width: 100%;
  height: 324rpx;
}
.slide-image {
  width: 100%;
  height: 324rpx;
}
.special-choose {
  display: flex;
  text-align: center;
  margin-top: 20rpx;
}
.special-choose .special-item {
  flex: 1;
  font-size: 0;
}
.special-choose .special-item .icon {
  display:block;
  margin: 0 auto;
  width:100rpx;
  height:100rpx;
  background-color:#ddd;
  border-radius: 50%;
  padding: 20rpx;
  box-sizing: border-box;
}

.special-choose .special-item .icon::before {
  content: '';
  display: block;
  width: 60rpx;
  height: 60rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
} 
.special-choose .special-item .icon.star {
  background-color: #2298DD;
}
.special-choose .special-item .icon.star::before {
  background-image: url(http://m.xyyzi.com/css/images/mystar.svg)
}
.special-choose .special-item .icon.new {
  background-color: #DD4C94;
}
.special-choose .special-item .icon.new::before {
  background-image: url(http://m.xyyzi.com/css/images/xinpin.svg)
}
.special-choose .special-item .icon.tejia {
  background-color: #673AB7;
}
.special-choose .special-item .icon.tejia::before {
  background-image: url(http://m.xyyzi.com/css/images/tejia.svg)
}
.special-choose .special-item .icon.coupon {
  background-color: #8BC34A;
}
.special-choose .special-item .icon.coupon::before {
  background-image: url(http://m.xyyzi.com/css/images/youhui.svg)
}
.special-choose .special-item .title {
  display: block;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #666;
}
.search-form {
  margin-top: 28rpx;
  display: block;
  position: relative;
}
.search-goods input {
  margin: 0 auto;
  border: 1rpx solid #000065;
  border-left: 0;
  border-right: 0;
  box-sizing: border-box;
  width: 100%;
  height: 86rpx;
  font-size: 36rpx; 
  padding-left: 30rpx;
  padding-right: 120rpx;
  border-radius: 10rpx;
  text-align: center;
}
.search-goods input::-webkit-input-placeholder {
  font-weight: 200;
  color: #0056fb;
}
.search-form .btn-area {
  position: absolute;
  top:0;
  right:0;
  height: 100%;
}
.search-form .btn-area button {
  height: 100%;
  border:0;
  background: radial-gradient(#000065, #DF287E, #000065);
  color:#fff;
  font-size: 28rpx;
  line-height: 86rpx;
}
.top-cate {
  display: flex;
  margin-top: 30rpx;
  flex-wrap:wrap;
}
.top-cate .cate-item {
  display: inline-block;
  width: 25%;
}

.top-cate .cate-item image {
  max-width: 100%;
  height: 135rpx
}
.main-cate {
  margin-top: 20rpx;
}
.main-cate .each-item-wrapper .each-header {
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(#000065, #DF287E);
  color: #fff;
  padding-left: 16rpx;
}
.main-cate .each-item-wrapper .each-header .title {
  display: block;
  float: left;
  font-weight: 700;
  font-size: 30rpx;
}
.main-cate .each-item-wrapper .each-header navigator {
  display: block;
  float: right;
  height: 80rpx;
  width: 80rpx;
  background-color: rgba(198, 24, 35, .6);
  border-radius: 50%;
  text-align: center;
  box-sizing: border-box;
}

.main-cate .each-item-wrapper .each-header navigator .more {
   font-size: 12px;
}
.main-cate .each-item-wrapper .cate-wrapper {
  display: flex;
  width: 100%;
}
.main-cate .each-item-wrapper .cate-wrapper .each-cate {
  width: 25%;
}
.main-cate .each-item-wrapper .cate-wrapper .each-cate image {
  max-width: 100%;
  height:182rpx;
}